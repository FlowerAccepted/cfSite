---
const {
  id,
  name = id,
  placeholder = "",
  required = false,
} = Astro.props;
---

<div class="input-wrap">
  <input
    id={id}
    name={name}
    type="password"
    class="glass-input"
    placeholder={placeholder}
    required={required}
  />

  <button
    type="button"
    class="eye-btn"
    data-target={id}
    aria-label="显示/隐藏密码"
  >
    <!-- 不可见（默认） -->
    <svg
      class="eye-icon eye-slash"
      viewBox="112.006 77.3188 24.3035 23.9729"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="M113.158 88.9545C113.158 88.9545 117.158 81.9545 124.158 81.9545C131.158 81.9545 135.158 88.9545 135.158 88.9545C135.158 88.9545 131.158 95.9545 124.158 95.9545C117.158 95.9545 113.158 88.9545 113.158 88.9545Z"
        fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M121.158 88.9545C121.158 87.2977 122.501 85.9545 124.158 85.9545C125.815 85.9545 127.158 87.2977 127.158 88.9545C127.158 90.6114 125.815 91.9545 124.158 91.9545C122.501 91.9545 121.158 90.6114 121.158 88.9545Z"
        fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M116.563 79.0688L132.273 99.5417"
        fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- 可见 -->
    <svg
      class="eye-icon eye-open"
      viewBox="112.006 77.3188 24.3035 23.9729"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="M113.158 88.9545C113.158 88.9545 117.158 81.9545 124.158 81.9545C131.158 81.9545 135.158 88.9545 135.158 88.9545C135.158 88.9545 131.158 95.9545 124.158 95.9545C117.158 95.9545 113.158 88.9545 113.158 88.9545Z"
        fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M121.158 88.9545C121.158 87.2977 122.501 85.9545 124.158 85.9545C125.815 85.9545 127.158 87.2977 127.158 88.9545C127.158 90.6114 125.815 91.9545 124.158 91.9545C122.501 91.9545 121.158 90.6114 121.158 88.9545Z"
        fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
  </button>
</div>
