---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="登录 - FAc's Site">
    <section class="title-section glass-panel">
        <h1>登录</h1>
    </section>
    <section class="glass-panel">
        <p><input id="username" placeholder="用户名" />
</p>
        <p><input id="password" type="password" placeholder="密码" /></p>
        <button class="glass-btn" onclick="login()">登录</button>
        <p id="msg"></p>
        <script src="/auth.js" is:inline></script>
    </section>
</BaseLayout>
